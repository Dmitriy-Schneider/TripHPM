# Настройки приложения
APP_NAME="Trip Report System"
APP_VERSION="1.0.0"
DEBUG=True

# База данных
DATABASE_URL=sqlite:///./trip_reports.db
# Для PostgreSQL используйте: postgresql://user:password@localhost/trip_reports

# Безопасность
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Загрузки и хранение
UPLOAD_DIR=./uploads
TEMPLATES_DIR=./templates
OUTPUT_DIR=./outputs

# Сервер
HOST=0.0.0.0
PORT=8000

# CORS (фронтенд URL)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Регистрация пользователей
ALLOW_REGISTRATION=True
REQUIRE_EMAIL_VERIFICATION=False

# Опционально: AI API (если понадобится в будущем)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
